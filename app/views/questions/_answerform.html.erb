
  <%= form_with(model: [@question, @comment]) do |f| %>
    <div class="field">
      <%= f.label :comment, 'Comment'%><br />
      <%= f.text_field :comment %>
      <% if @comment.errors[:comment] %>
         <p><small><%= @comment.errors[:comment].join(", ") %>
       <% end %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
